@model Aranoz.Model.Model.AdminViewModel

@{
    ViewBag.Title = "GetAllProduct";
    var i = 1;
}
<div class="table-responsive">
    <table id="data-table" class="table">
        <thead style="color: #ffaa00">
            <tr>
                <th>No</th>
                <th>Product Image</th>
                <th>Product Name</th>
                <th>Product Price</th>
                <th>Product product Details</th>
                <th>Category Name</th>
                <th>Delete</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>

        @foreach (var item in Model.ProductList)
        {
            <tr>
                <td>@i</td>
                <td>
                    <img src="@item.ProductImage" width="100" hight="100"/>
                </td>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.ProductPrice
                </td>
                <td>
                    @item.ProductDetails
                </td>
                <td>
                    @item.CategoryId
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteProduct", new { Id = item.ProdutID }, new { title = "Delete Item", data_toggle = "tooltip", data_placement = "top", onclick = "return confirm('Are you sure you want to delete this item?')" })
                </td>
                <td>
                    @Html.ActionLink("Update", "GetSingleProduct", new { Id = item.ProdutID }, new { title = "Edit Item", data_toggle = "tooltip", data_placement = "top" })
                </td>
            </tr>
            i++;
        }
        </tbody>
    </table>
</div>
